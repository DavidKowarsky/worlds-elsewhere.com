{
    "line-length": false,
    "single-h1": false,
    "no-inline-html": {
        "allowed_elements": [
            "a",
            "aside",
            "audio",
            "blockquote",
            "br",
            "details",
            "div",
            "h2", "h3", "h4", "h5",
            "i",
            "iframe",
            "ins",
            "span",
            "summary",
            "small",
            "time",
            "u",
            "video",
            "nav",
            "q",
            "em"
        ]
    },
    "single-trailing-newline": false,
    "header-increment": false,
    "heading-increment": false,
    "ul-style": { "style": "consistent" },
    "no-space-in-emphasis": false
}
